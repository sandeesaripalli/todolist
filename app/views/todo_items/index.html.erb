<p id="notice"><%= notice %></p>

<h1>Listing Todo Items</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Id</th>
      <th>Item Name</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td><%= todo_item.id %></td>
        <td><%= todo_item.name %></td>
        <td><%= todo_item.position %></td>
        <td><%=link_to 'Move up', todo_items_move_up_path(todo_item: todo_item), class: 'btn btn-success'%></td>
        <td><%=link_to 'Move down', todo_items_move_down_path(todo_item: todo_item), class: 'btn btn-primary'%></td>

        <td><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo item', new_todo_item_path(list_id: @list_id) %>
